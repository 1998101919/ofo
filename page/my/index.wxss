/* page/my/index.wxss */
.container{
  width:100%;
  height: 100vh;
   background: #f2f2f2;
}
.user-info{
  padding-top: 80rpx;
  width:100%;
  /* height: 30vh; */
  background: #fff;
  text-align: center;
  padding-bottom: 30rpx;
}
.user-info image{
  width:180rpx;
  height: 180rpx;
  border: 2px solid #ccc;
  border-radius: 50%;
  margin-bottom: 40rpx;
  box-shadow: 0 0 20rpx rgba(0,0,0,.2)
}
.userText{
  display: block;
  width: 100%;
  text-align: center;
}
.my-wallet{
  margin-top: 30rpx;
  background: #fff;
  width: 100%;
  padding: 40rpx 0rpx;
  display: flex;
  justify-content: space-between;
}
.my-wallet .wallet{
  padding-left: 50rpx;
}
 .my-wallet .wallet-text{
  padding-right: 30rpx; 
  font-weight: blod;
  color: #424242;
} 
.btn{
  position: absolute;
  bottom: 30rpx;
  width:90%;
  left: 5%;
}